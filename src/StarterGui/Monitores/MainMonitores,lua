local fila = game:GetService("ReplicatedStorage"):WaitForChild("Fila")




local function insertar(a)
	
	for _,v in pairs(script.Parent:GetChildren()) do
		if v:IsA("SurfaceGui") then
			local clon = script.TextLabel:Clone()
			clon.Name = a 
			clon.Text = a
			clon.Parent = v.Frame
		end
	end
	

	
end

for _,v in pairs(fila:GetChildren()) do
	insertar(v.Name)
end

fila.ChildAdded:Connect(function(xd)
	insertar(xd.Name)
end)

fila.ChildRemoved:Connect(function(xd)
	for _,v in pairs(script.Parent:GetChildren()) do
		if v:IsA("SurfaceGui")  then
			for a,b in pairs(v.Frame:GetChildren()) do
				if b.Name == xd  then
					b:Destroy()
				end
			end
			
		end
	end

end)
